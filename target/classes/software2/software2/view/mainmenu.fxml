<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="software2.software2.controller.MainMenuController">
   <children>
      <VBox prefHeight="800.0" prefWidth="1400.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1350.0" spacing="20.0">
               <children>
                  <RadioButton mnemonicParsing="false" text="Customer View">
                     <toggleGroup>
                        <ToggleGroup fx:id="toggleView" />
                     </toggleGroup></RadioButton>
                  <RadioButton mnemonicParsing="false" selected="true" text="Appointment View" toggleGroup="$toggleView">
                     <HBox.margin>
                        <Insets right="90.0" />
                     </HBox.margin>
                  </RadioButton>
                  <Button fx:id="AddBtn" mnemonicParsing="false" onAction="#onActionAdd" text="Add Appointment" />
                  <Button fx:id="UpdateBtn" mnemonicParsing="false" onAction="#onActionUpdate" text="Update Appointment" />
                  <Button fx:id="DeleteBtn" mnemonicParsing="false" onAction="#onActionDelete" text="Delete Appointment" />
                  <TextField>
                     <HBox.margin>
                        <Insets left="120.0" />
                     </HBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" text="Button" />
               </children>
            </HBox>
            <TableView fx:id="mainTable" maxWidth="-Infinity" prefHeight="400.0" prefWidth="1350.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </TableView>
            <Button fx:id="LogoutBtn" mnemonicParsing="false" onAction="#onActionLogout" text="Logout" />
         </children>
      </VBox>
   </children>
</AnchorPane>
