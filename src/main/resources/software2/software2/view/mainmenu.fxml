<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="software2.software2.controller.MainMenuController">
   <children>
      <VBox prefHeight="800.0" prefWidth="1400.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1350.0" spacing="20.0">
               <children>
                  <Button fx:id="AddBtn" mnemonicParsing="false" onAction="#onActionAdd" text="Add Appointment" />
                  <Button fx:id="UpdateBtn" mnemonicParsing="false" onAction="#onActionUpdate" text="Update Appointment" />
                  <Button fx:id="DeleteBtn" mnemonicParsing="false" onAction="#onActionDelete" text="Delete Appointment" />
               </children>
            </HBox>
            <TableView fx:id="appointmentsTable" maxWidth="-Infinity" prefHeight="400.0" prefWidth="1350.0">
              <columns>
                <TableColumn fx:id="appointmentIDCol" prefWidth="75.0" text="Appointment ID" />
                <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
                  <TableColumn fx:id="descCol" prefWidth="75.0" text="Description" />
                  <TableColumn fx:id="locationCol" prefWidth="75.0" text="Location" />
                  <TableColumn fx:id="typeCol" prefWidth="75.0" text="Type" />
                  <TableColumn fx:id="startTimeCol" prefWidth="75.0" text="Start Time" />
                  <TableColumn fx:id="endTimeCol" prefWidth="75.0" text="End Time" />
                  <TableColumn fx:id="custIDCol" prefWidth="75.0" text="Customer ID" />
                  <TableColumn fx:id="userIDCol" prefWidth="75.0" text="User ID" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </TableView>
            <Button fx:id="LogoutBtn" mnemonicParsing="false" onAction="#onActionLogout" text="Logout" />
         </children>
      </VBox>
   </children>
</AnchorPane>
